@model MyStore.domainDB.Entities.ShippingDetails

@{
    ViewBag.Title = "Checkout";
}

<h3>Check out now</h3>
<p>Please enter your details and we will ship your items shortly and will send your confirmation.</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row well-sm">
        <div class="col-md-offset-1 col-md-11">
            <div class="form-horizontal">
                @Html.ValidationSummary()
                <h4>Enter Shipping Detail</h4>
                <hr/>
                <div class="row well">
                @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "control-label"})
                    <div class="">
                        @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control checkoutField-cs" } })
                        @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                </div>
                <h4>Address:</h4>
                <div class="row well">
                    @foreach (var property in ViewData.ModelMetadata.Properties)
                    {
                        if (property.PropertyName != "Name" && property.PropertyName != "GiftWrap")
                        {
                            <div class="form-group">
                                <label>@(property.DisplayName ?? property.PropertyName)</label>
                                @Html.TextBox(property.PropertyName, null, new {@class = "form-control checkoutField-cs" })
                            </div>
                        }

                    }
                </div>
                <hr/>
                <h5>Options:</h5>
                <div class="row well">
                    <div class="form-group">
                        @Html.LabelFor(model => model.GiftWrap, htmlAttributes: new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            <div class="checkbox">
                                <label>
                                    @Html.EditorFor(model => model.GiftWrap)
                                    Gift wrap these items
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Complete Order" class="btn btn-default"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    
}

<div>
    @Html.ActionLink("Back", "Index")
</div>
