@model IEnumerable<string>

<div id="horizontal_menu" class="btn-group btn-group-sm btn-group-justified" >
    @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-default btn-sm h-menu" })


    @foreach (var link in Model)
    {
        @Html.RouteLink(link,
       new
       {
           Controller = "Product",
           Action = "List",
           category = link,
           page = 1
       },
       new
       {
           @class = "btn btn-default btn-sm h-menu" + (link == ViewBag.SelectedCategory ? "btn btn-primary h-menu" : "")
       })

    }
</div>
