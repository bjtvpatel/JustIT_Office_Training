@model MyStore.domainDB.Entities.Product


<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

<div class="row well well-top-cs">

    <a class="" href="@Url.Action("ProductDetail","Product", new {id=Model.ProductId})">
        <div class="col-md-12 productName">
            <strong>@Model.ProductName</strong><br />
            <strong>more>></strong>

        </div>
        <div class="col-md-offset-7 col-md-5 priceTag-cs ">
            <span class="pull-right priceTag label label-primary">@Model.Price.ToString("c")</span>
        </div>
    </a>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <a class="" href="@Url.Action("ProductDetail","Product", new {id=Model.ProductId})">
            @if (Model.ImageData != null)
            {
                <div class="img-cs" style=""><img class="img-thumbnail img-responsive" width="240" height="300" src="@Url.Action("GetImage", "Product", new {Model.ProductId })" />                                                                                   .})" /></div>
            }
            else
            {
                <div class="img-cs"><img class="img-responsive img-thumbnail" width="240" height="300" src="@Url.Content(@Model.Image)" alt="" /></div>
            }
        </a>
    </div>
</div>
<div class="row well well-bottom-cs">
    <div class="col-md-12 col-sm-12 col-xs-12 productInfo-cs">

        Author: @Model.Author<br />
        Publisher:@Model.Publisher
        @*<tr><td>Publisher: @Model.Publisher</td></tr>
            <tr><td>ISBN: @Model.ISBN</td></tr>*@

    </div>
    <div class="col-md-offset-8 col-md-4 col-sm-offset-8 col-sm-4 col-xs-offset-8 col-xs-4 col-atc-cs">
        @using (Html.BeginForm("AddToCart", "Cart"))
        {
            <div class="pull-right">
                @Html.HiddenFor(x => x.ProductId)
                @if (Request.Url != null)
                {
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                }
                <input type="submit" class="btn btn-success pull-right addtocart-cs" value="Add to Cart" />
            </div>
        }
    </div>
</div>
