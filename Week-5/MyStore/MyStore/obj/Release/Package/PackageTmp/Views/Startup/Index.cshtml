@model IEnumerable<string>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width"/>
    <title>Kids Store</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/ErrorStyles.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-flaty.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-flaty.min.css" rel="stylesheet"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top banner-cs">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <span class="hidden-xs">KidsLearning Store</span>
                    <div class="visible-xs">KidsLearning</div> <div class="visible-xs">Store</div>
                </a>
            </div>
            <div class="nav navbar-nav pull-right">@Html.Action("Summary", "Cart")</div>
        </div>
    </div>
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            @*<div class="carousel-inner text-center">
                <div class="item active">
                    <img src="~/Img/concentration-16032_1920.jpg" alt="Los Angeles" style="width:100%; height:400px;">
                </div>

                <div class="item">
                    <img src="~/Img/cube-620636_1920.jpg" alt="Chicago" style="width:100%; height:400px;">
                </div>

                <div class="item">
                    <img src="http://www.freeimageslive.com/galleries/workplace/education/preview/mathematics.jpg" title="Maths" alt="Maths" style="width:100%; height:400px;">
                </div>
            </div>*@

            <div class="carousel-inner text-center">
                <div class="item active">
                    
                    <img src="~/Img/p1.jpg" alt="" style="width:100%; height:300px;">
                </div>

                <div class="item">
                    
                    <img src="~/Img/p2.jpg" alt="" style="width:100%; height:300px;">
                </div>

                <div class="item">
                    
                    <img src="~/Img/p3.jpg" title="Maths" alt="Maths" style="width:100%; height:300px;">
                    
                </div>
                
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="container"><br />
        <div class="row well well-bottom-cs text-center"><p>Shop  by Category</p></div>
        <div class="row">
            <div class="col-md-3">
                <a href="@Url.Action("List", "Product", new { category = "Maths" })">
                   <p>Maths</p><img src="http://www.freeimageslive.com/galleries/workplace/education/preview/maths_school.jpg" class="img-responsive image-cs" style="width:250px; height:150px;" />
                </a>
            </div>
            <div class="col-md-3"><a href="@Url.Action("List", "Product", new { category = "English" })"><p>English</p><img src="http://www.freeimageslive.com/galleries/workplace/education/preview/handwriting.jpg" style="width:250px; height:150px;" /></a></div>
            <div class="col-md-3"><a href="@Url.Action("List", "Product", new { category = "Maths" })"><p>Science</p><img src="~/Img/education-548105_640.jpg" style="width:250px; height:150px;" /></a></div>
            <div class="col-md-3"><a href="@Url.Action("List", "Product", new { category = "English" })"><p>Coding and Computing</p><img src="http://www.freeimageslive.com/galleries/workplace/education/preview/electronic_learning.jpg" style="width:250px; height:150px;" /></a></div>


        </div>
    </div>

</body>
</html>
