@{
    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-flaty.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-flaty.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</head>
<body>
    <div class="navbar-header">
        <a href="@Url.Action("List","Product", new { @class = "btn btn-default btn-sm" })">Client Page</a>
    </div>
    <div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-succes">@TempData["message"]</div>
        }
        @RenderBody()
    </div>

</body>
</html>
