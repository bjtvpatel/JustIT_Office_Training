@model IEnumerable<string>

<div class="btn-group btn-group-sm btn-group-justified menu-horizontal-cs">
    @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-default btn-sm" })


    @foreach (var link in Model)
    {
        @Html.RouteLink(link,
       new
       {
           Controller = "Product",
           Action = "List",
           category = link,
           page = 1
       },
       new
       {
           @class = "btn btn-default btn-sm" + (link == ViewBag.SelectedCategory ? "btn btn-primary" : "")
       })

    }
</div>
