@model IEnumerable<string>
@{
    Layout = null;
}

@using System.Web.Optimization;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" initial-scale=1.0 />

    <!--Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- Latest compiled and minified JavaScript -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 70%;
            margin: auto;
        }
    </style>

    <!--Customised bootstraptheme-->
    <link href="~/Content/bootstrap-flaty.css" rel="stylesheet" />
    <!--Font Awesom link for icons-->
    <script src="https://use.fontawesome.com/31424c71d6.js"></script>
    @*-------------------------||custome stylying||-------------------------*@

    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 100px;
        }
    </style>
   
    <title>KidsLearning Store</title>
</head>
<body>
    <!--top bar section for icons and login-->
    <div class="container navbar-fixed-top top_bar " style="background-color:#FDFDFD;">
        <div class="row">
            <div class="col-xs-4">
                <a href="" class="social_icon"><i class="fa fa-facebook-official icon_css"></i></a>
                <a href="" class="social_icon"><i class="fa fa-twitter icon_css"></i></a>
                <a href="" class="social_icon"><i class="fa fa-youtube-play icon_css"></i></a>
                <a href="" class="social_icon"><i class="fa fa-google-plus icon_css" style="font-size:1.1em; color:#18bc9c;"></i></a>
            </div>
            <div class="col-xs-8">
                <div class="pull-right visible-xs">
                    @Html.Action("Summary", "Cart")
                </div>
                <ul class="top_bar_control">
                    <li><a href="@Url.Action("Login","Account")">Login</a></li>
                    @*<li class="hidden-xs"><a href="@Url.Action("Login","Account")">Register</a></li>
                    <li><a href="@Url.Action("Login","Account")">Admin</a></li>*@
                </ul>
            </div>
        </div>
    </div>
    <!--logo and navigation -->
    <div class="navbar navbar-inverse navbar-fixed-top" style="margin-top:22px;">
        <div class="container">
            <div class="row">
                <div class="col-xs-2">
                    @*<div class="navbar-header">*@
                    <a class="navbar-brand" href="#">
                        <span class="hidden-xs">KidsLearning Store</span>
                        <div class="visible-xs">Kids</div>
                        <div class="visible-xs">Store</div>
                    </a>
                    @*</div>*@
                </div>
                <div class="col-xs-10 mynavbar" style="">
                    <div class="">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <!--cart summary for top_fixed nav-->
                    <div class="pull-right hidden-xs">
                        @Html.Action("Summary", "Cart")
                    </div>
                    <div class="collapse navbar-collapse" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="@Url.Action("Index","Startup")">Home</a></li>
                            <li><a href="@Url.Action("Contact","Startup")">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Corousel area-->
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner text-center">
                <div class="item active">

                    <img src="~/Img/Banner/p13.jpg" class="img-responsive" alt="Leaning">
                </div>

                <div class="item">

                    <img src="~/Img/Banner/p12.jpg" class="img-responsive" alt="Learning">
                </div>

                <div class="item">

                    <img src="~/Img/Banner/p11.jpg" class="img-responsive" alt="Learning">
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!--title to choose category-->
    <div class="container">

        <div class="row text-center category_title"><h3>Shop  by Category</h3></div>
        <div class="row">
            <div class="col-sm-3 col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <a href="@Url.Action("List", "Product" , new { category="Maths" })">
                            <h4>Maths</h4>
                            <img src="~/Img/Category/c5.jpg" class="img-responsive img-thumbnail category-Img" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <a href="@Url.Action("List", "Product" , new { category="English" })">
                            <h4>English</h4><img src="~/Img/Category/c6.jpg" class="img-responsive img-thumbnail category-Img" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <a href="@Url.Action("List", "Product" , new { category="Science" })">
                            <h4>Science</h4><img src="~/Img/Category/c7.jpg" class="img-responsive img-thumbnail category-Img" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <a href="@Url.Action("List", "Product" , new { category="Computing" })">
                            <h4>Computing</h4>
                            <img src="~/Img/Category/c8.jpg" class="img-responsive img-thumbnail category-Img" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <footer><p class="text-center">By Baldev Patel</p></footer>
</body>
</html>
