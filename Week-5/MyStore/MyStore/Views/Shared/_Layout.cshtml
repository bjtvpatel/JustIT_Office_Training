<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-flaty.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-flaty.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top banner-cs">
        <div class="container">
            <div class="navbar-header" style="width:100%;">
                <a class="navbar-brand" href="@Url.Action("Index","Startup")">
                    <span class="hidden-xs">KidsLearning Store</span>
                    <div class="visible-xs">KidsLearning</div> <div class="visible-xs">Store</div>
                </a>
                @Html.Action("Summary", "Cart")
            </div>
        </div>
    </div>
    <div class="container-fluid" style="padding:0 0">
        <img src="~/Img/b6.jpg" alt="" style="width:100%; height:200px;" />
    </div>

    <div class="container body-content ">
        @*<div class="breadcrumb">
                <b>You are here:</b>
            </div>*@
        <div class="row panel content-cs">
            <div id="category" class="col-sm-3 col-md-2 hidden-xs">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="col-md-10 col-sm-8 col-xs-12">
                <div class="row well visible-xs">
                    <div class="col-xs-12">
                        @Html.Action("Menu", "Nav", new { horizontalLayout = true })
                    </div>
                </div>
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
        <hr />
        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>
</body>
</html>