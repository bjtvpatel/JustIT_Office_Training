@model MyStore.domainDB.Entities.Product


<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/themes/base/all.css" rel="stylesheet" />

<!--Display each product-->
<div class="panel panel-primary">
    <!--Productname and Price and click more for detail-->
    <div class="panel-heading">
        <table style="width:100%; height:70px;">
            <tr>
                <td><strong>@Model.ProductName</strong></td>
            </tr>
            <tr>
                <td>
                    <span class="pull-right label label-primary" style="font-size:1.0em;">@Model.Price.ToString("c")</span>
                </td>
            </tr>
        </table><a class="" href="@Url.Action("ProductDetail","Product", new {id=Model.ProductId})">more>></a>
    </div>
    <!--Image display-->
    <div class="panel-body text-center">
        <a class="" href="@Url.Action("ProductDetail","Product", new {id=Model.ProductId})">
            <img class="img-thumbnail img-responsive " width="200" height="250" src="@Url.Content(@Model.Image)" alt="" />
            @*@if (Model.ImageData != null)
                {
                                    <img class="img-thumbnail img-responsive" width="240" height="300" src="@Url.Action("GetImage", "Product", new {Model.ProductId })" />
                }
                else
                {
                    <img class="img-thumbnail img-responsive " width="240" height="300" src="@Url.Content(@Model.Image)" alt="" />
                }*@
        </a>
    </div>
    <!--Brief info about product-->
    <div class="panel-info">
        <div class="info_css">
            <label><b>Author: @Model.Author</b></label>
            <br />
            <label><b>Publisher: @Model.Publisher</b></label>
            @*<tr><td>Publisher: @Model.Publisher</td></tr>
                <tr><td>ISBN: @Model.ISBN</td></tr>*@
        </div>
        <!--add to cart icon-->
        <div>

            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                <div class="pull-right">
                    @Html.HiddenFor(x => x.ProductId)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)

                    <input type="submit" class="btn btn-success pull-right addtocart-btn" style="padding:5px 10px;" value="Add to Cart" />
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>