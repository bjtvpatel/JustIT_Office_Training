{
    <div class="form-horizontal">
        <h4>Enter New Record Detail</h4>

        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(t => t.Brand, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(t => t.Brand, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(t => t.ModelName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(t => t.ModelName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(t => t.Category, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        
                        @*@using (Html.BeginForm())
                        {
                            <p class="dropdown">@Html.DropDownListFor(t=>t.Category, new SelectList(ViewBag.ToString(), "Category","Select Category"))</p>
                        }*@
                        @Html.EditorFor(t => t.Category, new { htmlAttributes = new { @class = "form-control" } })
